@model Sistema_de_citas_médicas.Models.ViewModels.BusquedaMedicosViewModel

@{
    ViewData["Title"] = "Búsqueda de Médicos";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Búsqueda de Médicos</h1>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Criterios de Búsqueda</h5>
        </div>
        <div class="card-body">
            <form asp-action="Buscar" method="get" class="row g-3">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="NombreMedico" class="control-label"></label>
                        <input asp-for="NombreMedico" class="form-control" placeholder="Buscar por nombre..." />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Especialidad" class="control-label"></label>
                        <select asp-for="Especialidad" class="form-select">
                            <option value="">-- Todas las especialidades --</option>
                            @foreach (var especialidad in Model.Especialidades)
                            {
                                <option value="@especialidad">@especialidad</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="FechaDisponible" class="control-label"></label>
                        <input asp-for="FechaDisponible" class="form-control" />
                    </div>
                </div>
                <div class="col-12 text-center mt-3">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-search"></i> Buscar
                    </button>
                    <a asp-action="Buscar" class="btn btn-outline-secondary ms-2">
                        <i class="bi bi-arrow-counterclockwise"></i> Limpiar
                    </a>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Resultados.Any())
    {
        <h2 class="mt-4 mb-3">Resultados de la búsqueda</h2>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var medico in Model.Resultados)
            {
                <div class="col">
                    <div class="card h-100">
                        <div class="card-header bg-light d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">@medico.Nombre</h5>
                            <span class="badge bg-primary">@medico.Especialidad</span>
                        </div>
                        <div class="text-center p-3">
                            <img src="@medico.UrlFoto" class="img-fluid rounded-circle" style="width: 120px; height: 120px; object-fit: cover;" alt="@medico.Nombre">
                        </div>
                        <div class="card-body">
                            <p class="card-text">@(string.IsNullOrEmpty(medico.Descripcion) ? "Sin descripción disponible" : medico.Descripcion)</p>
                            <p><i class="bi bi-award"></i> <strong>Experiencia:</strong> @medico.AnosExperiencia años</p>
                            
                            @if (medico.HorariosDisponibles.Any())
                            {
                                <div class="mt-3">
                                    <h6><i class="bi bi-clock"></i> Horarios:</h6>
                                    <ul class="list-group list-group-flush">
                                        @foreach (var horario in medico.HorariosDisponibles.Take(3))
                                        {
                                            <li class="list-group-item py-1">@horario</li>
                                        }
                                        @if (medico.HorariosDisponibles.Count > 3)
                                        {
                                            <li class="list-group-item py-1 text-muted">Y @(medico.HorariosDisponibles.Count - 3) más...</li>
                                        }
                                    </ul>
                                </div>
                            }
                        </div>
                        <div class="card-footer bg-white border-top-0 text-center">
                            <a asp-action="Detalles" asp-route-id="@medico.Id" class="btn btn-outline-primary me-2">
                                <i class="bi bi-info-circle"></i> Ver Detalles
                            </a>
                            <a asp-controller="Citas" asp-action="Agendar" asp-route-medicoId="@medico.Id" class="btn btn-success">
                                <i class="bi bi-calendar-plus"></i> Agendar Cita
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else if (Model.NombreMedico != null || Model.Especialidad != null || Model.FechaDisponible != null)
    {
        <div class="alert alert-info mt-4" role="alert">
            <i class="bi bi-info-circle-fill me-2"></i>
            No se encontraron médicos que coincidan con los criterios de búsqueda.
        </div>
    }
</div>

@section Scripts {
    <script>
        $(function () {
            // Inicializar datepicker si estás usando jQuery UI
            $("#FechaDisponible").datepicker({
                dateFormat: "yy-mm-dd",
                changeMonth: true,
                changeYear: true
            });
        });
    </script>
} 
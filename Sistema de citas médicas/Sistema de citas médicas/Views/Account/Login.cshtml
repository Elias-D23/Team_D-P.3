@model Sistema_de_citas_médicas_.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center mb-0">Iniciar Sesión</h2>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @TempData["Error"]
                        </div>
                    }

                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-4">
                            <label asp-for="CorreoElectronico" class="control-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                <input asp-for="CorreoElectronico" class="form-control"
                                    placeholder="Ingrese su correo electrónico" />
                            </div>
                            <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Contrasena" class="control-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                <input asp-for="Contrasena" class="form-control" placeholder="Ingrese su contraseña" />
                            </div>
                            <span asp-validation-for="Contrasena" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <div class="form-check">
                                <input asp-for="Recordarme" class="form-check-input" type="checkbox" />
                                <label asp-for="Recordarme" class="form-check-label"></label>
                            </div>
                        </div>

                        <div class="form-group d-flex justify-content-between align-items-center">
                            <a asp-controller="Account" asp-action="Registro" class="btn btn-link">¿No tiene una cuenta?
                                Regístrese</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
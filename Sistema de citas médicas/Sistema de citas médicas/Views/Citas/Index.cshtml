@model List<Sistema_de_citas_médicas_.Models.ClienteCitasViewModel>

<h2>Clientes y Citas</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Cédula</th>
            <th>Fecha de Nacimiento</th>
            <th>Teléfono</th>
            <th>Correo Electrónico</th>
            <th>Citas</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var clienteCitas in Model)
        {
            <tr>
                <td>@clienteCitas.Cliente.Nombre</td>
                <td>@clienteCitas.Cliente.Cedula</td>
                <td>@clienteCitas.Cliente.FechaNacimiento.ToShortDateString()</td>
                <td>@clienteCitas.Cliente.Telefono</td>
                <td>@clienteCitas.Cliente.CorreoElectronico</td>
                <td>
                    @if (clienteCitas.Citas != null && clienteCitas.Citas.Any())
                    {
                        <ul>
                            @foreach (var cita in clienteCitas.Citas)
                            {
                                <li>
                                    @cita.FechaHora.ToString("dd/MM/yyyy HH:mm"),
                                    @cita.Medico,
                                    @cita.Especialidad,
                                    @cita.RequisitosEspeciales
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>Sin citas</p>
                    }
                </td>
                <td>
                    <a asp-controller="Clientes" asp-action="Delete" asp-route-id="@clienteCitas.Cliente.id"
                        class="btn btn-danger btn-sm">
                        <i class="fas fa-trash-alt"></i> Eliminar Paciente
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
@model List<Sistema_de_citas_médicas_.Models.PacienteCitasViewModel>

<h2 class="text-center my-4">Pacientes y Citas</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Nombre</th>
                <th>Cédula</th>
                <th>Fecha de Nacimiento</th>
                <th>Teléfono</th>
                <th>Correo Electrónico</th>
                <th>Citas</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pacienteCitas in Model)
            {
                <tr>
                    <td>@pacienteCitas.Paciente.Nombre</td>
                    <td>@pacienteCitas.Paciente.Cedula</td>
                    <td>@pacienteCitas.Paciente.FechaNacimiento.ToShortDateString()</td>
                    <td>@pacienteCitas.Paciente.Telefono</td>
                    <td>@pacienteCitas.Paciente.CorreoElectronico</td>
                    <td>
                        @if (pacienteCitas.Citas != null && pacienteCitas.Citas.Any())
                        {
                            <ul>
                                @foreach (var cita in pacienteCitas.Citas)
                                {
                                    <li>
                                        @cita.FechaHora.ToString("dd/MM/yyyy HH:mm"),
                                        @cita.Medico,
                                        @cita.Especialidad,
                                        @cita.RequisitosEspeciales
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p>Sin citas</p>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
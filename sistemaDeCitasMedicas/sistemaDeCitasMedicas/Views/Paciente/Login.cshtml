@model sistemaDeCitasMedicas.Models.Paciente

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h2 class="text-center">Iniciar Sesión</h2>
            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label class="form-label">Correo Electrónico</label>
                    <input asp-for="CorreoElectronico" class="form-control" type="email" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Contraseña</label>
                    <input asp-for="Contrasena" class="form-control" type="password" required>
                </div>
                <button type="submit" class="btn btn-primary w-100">Ingresar</button>
            </form>
            <p class="text-center mt-3">
                ¿No tienes cuenta? <a asp-action="Registrar">Regístrate</a>
            </p>
        </div>
    </div>
</div>

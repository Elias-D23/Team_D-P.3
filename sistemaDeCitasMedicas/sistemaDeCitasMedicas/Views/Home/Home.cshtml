@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Home Page";
    var usuarioAutenticado = HttpContextAccessor.HttpContext.User.Identity.IsAuthenticated;
}

@if (usuarioAutenticado)
{
    <div class="user-dashboard">
        <h2>¡Bienvenido de nuevo!</h2>
        <p>Accede a tu panel para gestionar tus citas.</p>
        <a href="@Url.Action("Index", "Cita")" class="btn btn-success">Ir a mis citas</a>
    </div>
}
else
{
    <div class="welcome-container">
        <h1>Bienvenido a Sistema de Citas Médicas para Pacientes</h1>
        <p>Regístrate o inicia sesión para gestionar tus citas médicas.</p>
        <div class="actions">
            <a href="@Url.Action("Registrar", "Paciente")" class="btn btn-primary">Registrarse</a>
            <a href="@Url.Action("Login", "Paciente")" class="btn btn-secondary">Iniciar sesión</a>
        </div>
    </div>
}

<style>
    .welcome-container, .user-dashboard {
        text-align: center;
        margin-top: 50px;
    }

        .actions a, .user-dashboard a {
            margin: 10px;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
        }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

    .btn-success {
        background-color: #28a745;
        color: white;
    }
</style>

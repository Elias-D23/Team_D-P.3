@model List<sistemaDeCitasMedicas.Models.PacienteCitasViewModel>

<h2>Pacientes</h2>

<!-- Mostrar mensaje de confirmación si existe -->
@if (TempData["Mensaje"] != null)
{
    <div id="mensaje" class="alert alert-success" role="alert">
        @TempData["Mensaje"]
    </div>

    <script>
        // Ocultar el mensaje después de 4 segundos
        setTimeout(function() {
            var mensaje = document.getElementById("mensaje");
            if (mensaje) {
                mensaje.style.display = 'none';
            }
        }, 4000); // 4000 milisegundos = 4 segundos
    </script>
}

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Cédula</th>
            <th>Fecha de Nacimiento</th>
            <th>Teléfono</th>
            <th>Correo Electrónico</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pacienteCitas in Model)
        {
            <tr>
                <td>@pacienteCitas.Paciente.Nombre</td>
                <td>@pacienteCitas.Paciente.Cedula</td>
                <td>@pacienteCitas.Paciente.FechaNacimiento.ToShortDateString()</td>
                <td>@pacienteCitas.Paciente.Telefono</td>
                <td>@pacienteCitas.Paciente.CorreoElectronico</td>
                <td>
                    <a asp-action="Info" asp-route-id="@pacienteCitas.Paciente.id" class="btn btn-info">Info</a>

                    <a asp-action="EditarPaciente" asp-route-id="@pacienteCitas.Paciente.id" class="btn btn-warning">Editar</a>

                    <!-- Formulario para eliminar paciente -->
                    <form asp-action="EliminarPaciente" asp-route-id="@pacienteCitas.Paciente.id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


